<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Pinger.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25 ">
            <Label
                Text="Hamza Baghdadi" 
                SemanticProperties.HeadingLevel="Level1"
                FontFamily="Cascadia Code" Padding="10"
                FontSize="Small" HorizontalTextAlignment="End"></Label>
            <Image x:Name="pingUI" Source="normal.png" MaximumWidthRequest="200" ></Image>
            <Label
                x:Name="pingView"
                Text="-- ms"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" FontFamily="Cascadia Code">
            </Label>
            <Label Text="PING" Style="{StaticResource Headline}" TextColor="SkyBlue" FontFamily="Cascadia Code"></Label>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
